---
extends: default

ignore: |
  tests/uat-tests/
  tests/proposed-enhancements/
  tests/critical-gaps/
  tests/container-tests/
  tests/vendor-tests/

rules:
  # Focus on critical issues only for network automation
  line-length:
    max: 300  # Very generous for complex Jinja2 expressions

  # Disable non-critical rules for network automation
  document-start: disable
  new-line-at-end-of-file: disable
  trailing-spaces: disable
  empty-lines: disable
  indentation:
    spaces: consistent  # Allow flexible indentation

  # Allow truthy values common in Ansible
  truthy: disable

  # Required by ansible-lint
  braces:
    max-spaces-inside: 1

  # Required by ansible-lint
  octal-values:
    forbid-implicit-octal: true
    forbid-explicit-octal: true

  # Required by ansible-lint
  comments:
    min-spaces-from-content: 1

  # Disable overly strict rules
  comments-indentation: disable